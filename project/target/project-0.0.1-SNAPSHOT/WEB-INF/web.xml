<?xml version="1.0" encoding="utf-8"?>
<web-app
        version="2.5"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>sign</servlet-name>
        <servlet-class>MyGAEApp.project.SignGuestbookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sign</servlet-name>
        <url-pattern>/sign</url-pattern>
    </servlet-mapping>
   
     <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>MyGAEApp.project.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>about</servlet-name>
        <servlet-class>MyGAEApp.project.AboutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>about</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>hostSuppr</servlet-name>
        <servlet-class>MyGAEApp.project.HostSupprServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hostSuppr</servlet-name>
        <url-pattern>/hostSuppr</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
